<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><input type="checkbox" name="checkbox"><%= link_to task.title, task_path(task) %>
    <%= link_to "delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<%= link_to "Create a new task", tasks_path %>
